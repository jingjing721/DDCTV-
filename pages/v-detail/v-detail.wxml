<view class="wraper" wx:if="{{pageShown==1}}">
    <view class="video" catchtap="play">
        <video wx:if="{{play}}" autoplay objectFit="fill" src="{{video}}"></video>
        <image src="{{smallPic}}" wx:if="{{!play}}"></image>
        <view class="icon" wx:if="{{!play}}"></view>
    </view>
    <scroll-view scroll-y="true" class="content">
    	<view class="title two-line">{{title}}</view>
    	<!-- <view class="tags"><text>#假装很会吃</text></view> -->
    	<view class="main">{{summary}}</view>
    </scroll-view>
    <!-- 点赞 -->
    <view class="praise{{heart?' on':''}}" catchtap="getHeart">{{likeCount}}</view>
</view>