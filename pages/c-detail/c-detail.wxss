.wraper{
	width: 100%;
	height: 100%;
	overflow:hidden;
	position: relative;
}
.video{
	width: 100%;
	height: 390rpx;
	position: absolute;
	left: 0;
	top:0;
	right:0;
	background: #d8d8d8;
}
.content{
	width: auto;
	position: absolute;
	left: 0;
	top: 390rpx;
	right: 0;
	bottom:0;
	z-index: 1;
	padding: 0 0 24rpx 24rpx;
}
.content .name{
	font-size: 32rpx;
	font-weight: bold;
	color: #121212;
	padding: 35rpx 24rpx 15rpx 0;
}
.content .tags{
	font-size: 25rpx;
	color: #b2b2b2;
	padding-bottom: 40rpx;
	padding-right: 24rpx;
	position: relative;
}
.content .tags::before{
	content:'';
	width: 35rpx;
	height: 4rpx;
	background: #b2b2b2;
	position: absolute;
	left: 0;
	bottom: 0;
}
.content .desc{
	color: #b2b2b2;
	margin-top: 40rpx;
	padding-right: 24rpx;
	overflow:hidden;
	line-height: 1.4;
}
.material{
	overflow:hidden;
	padding: 40rpx 24rpx 0 0;
	color: #474747;
}
.material .title{
	font-size: 32rpx;
	font-weight: bold;
	color: #121212;
}
.material .item{
	padding:15rpx 0;
	font-size: 26rpx;
	overflow:hidden;
}
.material .item view{
	width: 50%;
	text-align: left;
}
.step{
	overflow:hidden;
	margin:35rpx 0;
	padding-right: 24rpx;
	color: #474747;
}
.step .title{
	font-size: 32rpx;
	font-weight: bold;
	color: #121212;
}
.step .title text{
	font-weight: normal;
	color: #474747;
}
.step .main{
	line-height: 1.4;
	padding-top: 25rpx;
}
.praise{
	width: 100rpx;
	height: 100rpx;
	background: #d8d8d8;
	border-radius: 50%;
	position: absolute;
	right: 30rpx;
	bottom: 40rpx;
	z-index: 2;
}
.praise view{
	text-align: center;
	line-height: 1.2;
}
.praise view:first-child{
	padding-top: 26rpx;
	font-size: 24rpx;
	color: #444;
}
.praise view:last-child{
	font-size: 22rpx;
	color: #bbb;
}











