.list-title{
	font-size: 56rpx;
	font-weight: bold;
	color: #1A1A1A;
	margin: 25rpx 0;
}
.wraper{
	padding: 0 40rpx;
	overflow:hidden;
}
.wraper .list{
	overflow:hidden;
}
.item{
	float: left;
	position: relative;
	overflow:hidden;
	box-sizing: border-box;
	margin-bottom: 40rpx;
}
.item:nth-child(even){
	margin-left: 20rpx;
}
.item .title{
	font-size: 36rpx;
	font-weight: bold;
	padding-top: 10rpx;
}
.item .desc{
	font-size: 28rpx;
	color: #656565;
}
.item image{
	width: 325rpx;
	height: 325rpx;
}
